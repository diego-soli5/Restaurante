@model List<Restaurante.Web.Models.Mesa.MesaDTO>
@{
    ViewData["Title"] = "Mesas";
}

<div class="card card-blue">
    <div class="card-header">
        <h4>Gestionar @ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <div class="col-sm-12">
            <div class="row" id="tblDatos">
                @{
                    await Html.RenderPartialAsync("_ListadoMesasPartial", Model);
                }

            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalCrear" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Mesa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data" id="frmCrear">
                    <div class="form-group">
                        <label for="TcDscMesa">Descripción</label>
                        <input maxlength="100" type="text" class="form-control" name="TcDscMesa" id="TcDscMesa" placeholder="Descripción" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary" form="frmCrear" id="btnSave">Agregar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Mesa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data" id="frmEditar">
                    <input type="hidden" name="Id" id="Id" />
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="number" class="form-control" name="Id2" id="Id2" placeholder="Id" disabled/>
                    </div>
                    <div class="form-group">
                        <label for="TcDscMesa">Descripción</label>
                        <input maxlength="100" type="text" class="form-control" name="TcDscMesa" id="TcDscMesaEdit" placeholder="Descripción" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary" form="frmEditar" id="btnAgregar">Editar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/mesa.js"></script>
}