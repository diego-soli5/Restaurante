@model Restaurante.Web.ViewModels.Menu.MenuViewModel
@{
    ViewData["Title"] = "Menus";
}

<div class="card card-blue">
    <div class="card-header">
        <h4>Gestionar @ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <div class="col-sm-12">
            <div class="row" id="tblDatos">
                @{
                    await Html.RenderPartialAsync("_ListadoMenuPartial", Model.Menus);
                }

            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalCrear" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Menu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data" id="frmCrear">
                    <div class="form-group">
                        <label for="TcDscMenu">Descripción</label>
                        <input maxlength="100" type="text" class="form-control" name="TcDscMenu" id="TcDscMenu" placeholder="Descripción" required />
                    </div>
                    <div class="form-group">
                        <label for="TnIdTipoMenu">Tipo de Menu</label>
                        @Html.DropDownList("TnIdTipoMenu", Model.TipoMenuSelectListItems, "Seleccionar Tipo de Menu", new { @class = "form-control", required = "" })
                    </div>
                    <div class="form-group">
                        <label for="TdPrecio">Precio</label>
                        <input type="number" min="0" step="0.01" pattern="^\d+(?:\.\d{1,2})?$" class="form-control" name="TdPrecio" id="TdPrecio" placeholder="Precio" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary" form="frmCrear" id="btnSave">Agregar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Tipo de Menu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data" id="frmEditar">
                    <input type="hidden" name="Id" id="Id" />
                    <div class="form-group">
                        <label for="Id2">Id</label>
                        <input type="text" class="form-control" name="Id2" id="Id2" placeholder="Id" disabled />
                    </div>
                    <div class="form-group">
                        <label for="TcDscMenu">Descripción</label>
                        <input maxlength="100" type="text" class="form-control" name="TcDscMenu" id="TcDscMenuEdit" placeholder="Descripción" required />
                    </div>
                    <div class="form-group">
                        <label for="TnIdTipoMenu">Tipo de Menu</label>
                        @Html.DropDownList("TnIdTipoMenu", Model.TipoMenuSelectListItems, "Seleccionar Tipo de Menu", new { @class = "form-control", id="TnIdTipoMenuEdit", required = "" })
                    </div>
                    <div class="form-group">
                        <label for="TdPrecio">Precio</label>
                        <input type="number" min="0" step="0.01" max="99999.99" class="form-control" name="TdPrecio" id="TdPrecioEdit" placeholder="Precio" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary" form="frmEditar" id="btnAgregar">Editar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/menu.js"></script>
}